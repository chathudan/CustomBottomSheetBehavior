<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- Delegates to Google Map Scrolling AppBar outside of viewpager -->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/delegating_appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:theme="@style/AppTheme.AppBarOverlayLight"
        android:background="#0000"
        app:layout_behavior="co.com.parsoniisolutions.custombottomsheetbehavior.lib.DelegatingScrollingAppBarLayoutBehavior">
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/anchor_point"
        app:layout_behavior="co.com.parsoniisolutions.custombottomsheetbehavior.lib.BackdropBottomSheetBehavior">

        <ImageView
            android:id="@+id/static_default_photo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:background="@drawable/cheese_default"
            android:src="@color/default_photo_overlay"
            android:visibility="visible" />

        <!-- Full bleed photo in the background -->
        <android.support.v4.view.ViewPager
            android:id="@+id/photos_view_pager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:background="#0000"
            android:visibility="visible" />

    </FrameLayout>

    <View
        android:id="@+id/bss"
        app:layout_anchor="@+id/bottom_sheet"
        app:layout_anchorGravity="top"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@drawable/gradient_shadow" />

    <android.support.v4.widget.SlopSupportingNestedScrollView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:behavior_peekHeight="@dimen/bottom_sheet_peek_height"
        app:layout_behavior="co.com.parsoniisolutions.custombottomsheetbehavior.lib.BottomSheetBehaviorGoogleMapsLike"
        app:anchorPoint="@dimen/anchor_point"
        app:behavior_hideable="true">

        <include
            android:id="@+id/bsc"
            layout="@layout/bottom_sheet_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SlopSupportingNestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_anchor="@id/bottom_sheet"
        app:layout_anchorGravity="top|right|end"
        android:src="@drawable/ic_action_go"
        android:layout_margin="@dimen/fab_margin"
        app:layout_behavior="@string/ScrollAwareFABBehavior"
        android:clickable="true"/>

